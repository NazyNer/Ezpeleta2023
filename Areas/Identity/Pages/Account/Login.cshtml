@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar Sesion";
}
<div class="MiddleLogIn">
    <div class="BG"></div>
    <div class="row flex-login text-center">
        <div class="col-md-4 fondo-user">
            <h1>@ViewData["Title"]</h1>
            <hr class="hr-style"/>
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mt-4">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="mt-3">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Olvidaste tu contraseña?</a>
                        </p>
                    </div>
                    <div class="mt-4">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn_primary">Iniciar sesion</button>
                    </div>
                    <div>
                        <p class="mt-4">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Regristrarse</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
