@{
    ViewData["Title"] = "Home Page";
}


<!-- Modal -->
<div class="modal fade" id="ModalCategoria" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Agregar Categoria</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="CategoriaID" value="0" />
        <div>
            <label class="control-label">Categoria</label>
            <input type="text" class="form-control" id="Descripcion" autocomplete="off" onkeyup="this.value = this.value.toUpperCase()"/>
            <label id="lbl-error" style="color: red;"></label>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <input id="btnGuardar" type="button" onclick="GuardarCategoria()" class="btn btn-primary" value="Guardar Cambios" />
        <input id="btnEliminar" type="button" onclick="eliminarCategoria()" class="btn btn-danger" value="Desabilitar" />
        <input id="btnHabilitar" type="button" onclick="eliminarCategoria()" class="btn btn-success" value="Habilitar" />
      </div>
    </div>
  </div>
</div>


<div>
    <h1 class="display-4">Categorias</h1>

      <!-- Button trigger modal -->
      <div class="mb-2">
        <button type="button" onclick="VaciarFormulario()" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalCategoria">
            Nuevo
        </button>
      </div>

 
  <table class="table table-bordered table-striped table-condensed">
    <thead>
        <tr>
            <th>Descripcion</th>
        </tr>
    </thead>
        <tbody id="tbody-categorias">
          <h1 id="errorTable"></h1>
        </tbody>
  </table>
</div>

@section Scripts{
    <script src="~/js/categoria-1.0.0.js"></script>
}

